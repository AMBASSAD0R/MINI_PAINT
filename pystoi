def p(width, height, background_char):
    k = 0
    for i in range(width):
        print(background_char, end="")
    print("")
    for i in range(height-2):
        print(background_char, end="")
        for i in range(width - 2):
            print(" ", end="")
        print(background_char)
    for i in range(width):
        print(background_char, end="")
    print("")
print(p(int(input()), int(input()), input()))
